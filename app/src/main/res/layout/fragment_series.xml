<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeriesFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <EditText
            android:textColor="@color/colorAccent"
            android:id="@+id/edt_search_series"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/searchbg"
            android:drawableRight="@drawable/ic_search"
            android:drawableTint="@color/colorAccent"
            android:hint="Search Series"
            android:padding="5dp"
            android:textColorHint="@color/colorAccent" />
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/seriesloading"
            android:layout_centerInParent="true"/>
       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
            android:id="@+id/series_list"
           android:layout_below="@+id/edt_search_series"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:elevation="20dp"
            android:src="@drawable/ic_add" />


    </RelativeLayout>

</FrameLayout>